<!DOCTYPE html>
<html>
<head>
  <div class="container">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", session_path("current"), method: "delete" %>
    <% else %>
      <%= link_to "Sign Up", new_user_path, :class => 'btn btn-primary btn-small' %>
      <%= link_to "Log In", new_session_path, :class => 'btn btn-success btn-small' %>
    <% end %>
  </div>
  <title>Hacker News Clone | <%= yield :title %></title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
 <body>

  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-error"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
