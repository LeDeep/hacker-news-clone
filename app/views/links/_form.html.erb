<% if @link.errors.any? %>
  <div class="alert alert-error">
    <h3>Please correct these problems.</h3>
    <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @link do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>